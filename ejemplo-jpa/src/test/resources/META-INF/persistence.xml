<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">         
    <persistence-unit name="ejemploJPAPersistenceUnit" 
                      transaction-type="RESOURCE_LOCAL">
                      
        <!-- Dependiendo del proveedor JPA que se use es necesario o no incluir las clases persistentes. En el caso
        	de que se use Hibernate como proveedor JPA no es necesario, pero es una buena práctica incluirlo por 
        	si en un futuro se usa otro proveedor que no detecte automáticamente las clases persistentes.
        -->              
        <class>org.icabanas.ejemplos.jpa.Persona</class>
                      
        <properties>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="false" />
 
            <property name="hibernate.connection.driver_class" 
                      value="org.hsqldb.jdbcDriver" />
            <property name="hibernate.connection.url" 
                      value="jdbc:hsqldb:mem:mem:test" />
            <property name="hibernate.connection.username" value="sa" />
 
            <property name="hibernate.dialect" 
                      value="org.hibernate.dialect.HSQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
                
    </persistence-unit>
</persistence>